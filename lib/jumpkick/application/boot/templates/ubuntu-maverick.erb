bash -c '
if [ ! -f /usr/bin/chef-client ]; then
  apt-get update
  apt-get install -y build-essential wget ruby ruby-dev libruby libruby-extras
  cd /tmp
  wget http://production.cf.rubygems.org/rubygems/rubygems-1.8.19.tgz
  tar zxf rubygems-1.8.19.tgz
  cd rubygems-1.8.19
  ruby setup.rb --no-format-executable
  gem install ohai chef --no-rdoc --no-ri --verbose
fi
